{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "es2019", "esnext.asynciterable"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "*": ["./*"],
      "@/*": ["./*"]
    },
    "incremental": true
  }
}
